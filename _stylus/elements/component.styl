// ——————————————————————————————————————————————————————————————————
// Poster Image
// ——————————————————————————————————————————————————————————————————

.background
    height: 100vh
    background-image: url('/assets/img/business-wallpaper-13.jpg')
    background-size: cover
    background-attachment: fixed

    
    &:before
        content: ''
        position: absolute
        top: 0
        right: 0
        bottom: 0
        left: 0
        background-image: linear-gradient(to bottom right, blue, purple)
        opacity: .65 
  


// ——————————————————————————————————————————————————————————————————
// Card
// ——————————————————————————————————————————————————————————————————

.card-wrapper
    display: flex
    justify-content: center
    align-items: center
    height: 100vh
    overflow: hidden

.card 
    z-index: 1000
    background-color: white
    height: 400px
    width: 350px
    padding-top: 40px
    text-align: center
    border-radius: 5px

    .profile-img
        border-radius: 100px
        width: 135px
  

    .name
        margin-top: 41px
        text-transform: uppercase
        letter-spacing: 1px
        font-family: 'Avenir Next'
        color: $black
        font-weight: 400
        font-size: 22px
        letter-spacing: .7px
  
    .profession
        font-family: 'Avenir Next'
        font-weight: 400
        color: $black
        font-size: 18px
        margin-top: 10px
        letter-spacing: 2px;
  



.card .flex-container
    display: flex
    justify-content: center
    margin-top: 30px

    img
        margin: 0 15px
    
        &:hover
            transition: opacity 0.4s ease;
            opacity: .7


