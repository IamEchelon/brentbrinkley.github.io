// navbar
// ——————————————————————————————————————————————————————————————————

.navbar
    z-index: 1001
    margin: auto
    margin-bottom: 10px
    width: 100% 
    font-family: "Avenir Next"
    font-weight: 300
    position: absolute;
    bottom: 0

    // background-image: url('/assets/img/business-wallpaper-13.jpg')
    // background-position: bottom
    // background-attachment: fixed
    

    .logo
        float: left
        
        img
            width: 70%

    .navlinks

        float: right

        ul
            list-style: none 

        li 
            display: inline-block
            margin-left: 30px
        
            a 
                padding: 10px
                text-decoration: none
                text-align: right
                list-style: none
                color: white
                position: relative
            
            // This creates the underline animation effect
            a:before
                content: ""
                position: absolute
                width: 100%
                height: 1px
                bottom: 0
                left: 0
                background-color: white
                visibility: hidden
                -webkit-transform: scaleX(0)
                transform: scaleX(0)
                -webkit-transition: all 0.2s ease-in-out 0s
                transition: all 0.2s ease-in-out 0s
            
            a:hover:before
                visibility: visible
                -webkit-transform: scaleX(1)
                transform: scaleX(1)
            
    


